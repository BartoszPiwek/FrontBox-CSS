{{#block "sprites-comment"}}
/*=========================================================================
|| FILE: Sprite Default - {{spritesheet_info.strings.name}}
=========================================================================*/
{{/block}}


{{#block "sprites-path"}}
.{{spritesheet_info.strings.name}} {
    display: block;
    background-image: url({{spritesheet.escaped_image}}2x);
    background-size: {{spritesheet.width}}px {{spritesheet.height}}px;
    @media @retina {
        background-image: url({{spritesheet.escaped_image}});
    }
}
{{/block}}


{{#sprites}}
.{{name}}{
    background-position: {{px.offset_x}} {{px.offset_y}};
    width: {{px.width}};
    height: {{px.height}};
}
{{/sprites}}