{
	/* Guard */
	"Guard: if": {
		"prefix": "if",
		"body": [
			"@if ($${1:value} == true) {",
			"\t$2",
			"}"
		]
	},
	"Guard: if/else": {
		"prefix": "if/else",
		"body": [
			"@if ($1 == true) {",
			"\t$2",
			"} @else {",
			"\t$3",
			"}"
		]
	},
	/* Loop */
	"Loop: for": {
		"prefix": "for",
		"body": [
			"@for $i from 1 through ${1:10}",
			"\t$2",
			"}"
		]
	},
	/* Variable list */
	"Variable list: color": {
		"prefix": "color",
		"body": [
			"color('$1')"
		]
	},
	"Variable list: index": {
		"prefix": "index",
		"body": [
			"index('$1')"
		]
	},
	// Media Queries
	"Media queries: default": {
		"prefix": "media",
		"body": [
			"@include media ('$1') {",
			"\t$2",
			"}"
		]
	},
	"Media queries: default max": {
		"prefix": "media-max",
		"body": [
			"@include media-max ('$1') {",
			"\t$2",
			"}"
		]
	},
	"Media queries: special": {
		"prefix": "media-special",
		"body": [
			"@include media-special ('$1') {",
			"\t$2",
			"}"
		]
	},
	"Media queries: special max": {
		"prefix": "media-special-max",
		"body": [
			"@include media-special-max ('$1') {",
			"\t$2",
			"}"
		]
	},
}
