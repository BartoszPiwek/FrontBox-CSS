- var page_title = "Debug Lists | FrontBox"
- var page_description = false
- var page_critical_css = false

include ../template/includes/begin.pug

.page-content.relative
	.debug-wrap.wrap

		h1.debug-header.
			Tabs

		.row.row-space
			.col-6
				p.
					Default template
				.debug-code
					:escape
						<div class="bar" data-bar="1">
							<div class="bar__placeholder"></div>
							<div class="bar__content"></div>
						</div>
			.col-6
				p.
					Emmet template
				p.debug-code.
					.bar[data-bar="1"]>.bar__placeholder+.bar__content

		//- List vertical
		h2.debug-title.
			Bar image <strong>.bar-image</strong>
		.row.row-space
			.col-6
				.debug-view

					.row
						.col-12.sm_col-4.md_col-12
							.tabs.tabs--horizontal.tabs--expand#tabs(data="showMore", data-target="tabs__content")
								.tabs__expand
									| Tab menu
								.tabs__view
									.tabs__content#tabs__content
										.tabs__item
											| Item 1
										.tabs__item
											| Item 2
										.tabs__item
											| Item 3
										.tabs__item
											| Item 4

								


			.col-6
				form(action="", data-change-class="tabs")
					input(type="checkbox", value="tabs--horizontal", checked) 
					| .tabs--horizontal
					input(type="checkbox", value="tabs--vertical") 
					| .tabs--vertical
					input(type="checkbox", value="tabs--expand") 
					| .tabs--expand

include ../template/includes/scripts.pug

script.
	var
	$debugChangerClass = $("[data-change-class]");

	$debugChangerClass.each(function(){
		var
		$this = $(this),
		findContent = $this.attr("data-change-class"),
		$content = $("#"+findContent),
		$inputs = $this.find("input"),
		$range = $

		console.log($content);

		$inputs.on("change", function(){
			var 
			$this = $(this),
			value = $this.val(),
			change = $this.attr("data-change");

			if (change) {
				$content.attr(change, value)
			}

			console.log(value);

			if($this.is(":checked")) {
				$content.addClass(value);
			}
			else {
				$content.removeClass(value);
			}
			
		});
	});

include includes/end.pug