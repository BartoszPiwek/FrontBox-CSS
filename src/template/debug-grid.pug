- var page_title = "FrontBox Starter!"
- var page_description = "FrontBox Description"
- var page_critical_css = "index"

include includes/header.pug

.page-content.relative
	.wrap

		//- Columns
		h2.debug-title.
			Columns
		p.debug-code.
			.row
				.col-{number}
		.debug-view.center
			.row.row-space
				.col-12
					div(style="background-color: red;")
						| .col-12

				.col-11
					div(style="background-color: red;")
						| .col-11
				.col-1
					div(style="background-color: blue;")
						| .col-1

				.col-10
					div(style="background-color: red;")
						| .col-10
				.col-2
					div(style="background-color: blue;")
						| .col-2

				.col-9
					div(style="background-color: red;")
						| .col-9
				.col-3
					div(style="background-color: blue;")
						| .col-3

				.col-8
					div(style="background-color: red;")
						| .col-8
				.col-4
					div(style="background-color: blue;")
						| .col-4

				.col-7
					div(style="background-color: red;")
						| .col-7
				.col-5
					div(style="background-color: blue;")
						| .col-5

				.col-6
					div(style="background-color: red;")
						| .col-6
				.col-6
					div(style="background-color: blue;")
						| .col-6

		//- Row responsive

		h2.debug-title.
			responsive &nbsp; static column
		p.debug-code.
			.row.row-responsive
				.col.col-static
				.col.col-responsive
		.debug-view.center
			.row.row-responsive
				.col.col-static(style="background-color: red; width: 300px")
					| .col-static (width: 300px)
				.col.col-responsive(style="background-color: blue")
					| .col-responsive
			br
			.row.row-responsive#js_testPlaceholder
				.col.col-static(style="background-color: red; width: 120px")
					| .col-static (width: 120px)
				.col.col-responsive(style="background-color: blue")
					| .col-responsive

		h2.debug-title.
			row reverse
			
		p.debug-code#js_testPlaceholder2.
			.row.row-reverse
				.col
				.col
		.debug-view.center
			.row.row-reverse
				.col(style="background-color: red;")
					| .col
				.col(style="background-color: blue;")
					| .col

		p.debug-code.
			.row.lg_row-reverse
				.col
				.col
		.debug-view.center
			.row.lg_row-reverse
				.col(style="background-color: red;")
					| .col
				.col(style="background-color: blue;")
					| .col

		h2.debug-title
			| .col content controll
		| Features: responsive {sm_, md_, lg_}
			
		p.debug-code.
			.col-y-top .col-y-center .col-y-bottom .col-x-left .col-x-center .col-x-right
		.debug-view.center
			.row

				.col-2.col-y-top(style="background-color: red; height: 200px !important")
					| .col-y-top
				.col-2
				.col-2.col-y-center(style="background-color: red; height: 200px !important")
					| .col-y-center
				.col-2
				.col-2.col-y-bottom(style="background-color: red; height: 200px !important")
					| .col-y-bottom
				.col-2
				.col-2
				.col-2.col-x-left(style="background-color: red; height: 200px !important")
					| .col-x-left
				.col-2
				.col-2.col-x-center(style="background-color: red; height: 200px !important")
					| .col-x-center
				.col-2
				.col-2.col-x-right(style="background-color: red; height: 200px !important")
					| .col-x-right



		p.debug-code.
			.row.lg_row-reverse
				.col
				.col
		.debug-view.center
			.row.lg_row-reverse
				.col(style="background-color: red;")
					| .col
				.col(style="background-color: blue;")
					| .col

include includes/footer.pug
