//- Include bootstrap template
	blocks:
		- variables
		- content
		- assets_header
		- assets_footer
extends includes/bootstrap.pug

block variables
	- var title = 'FrontBox-CSS Starter'
	- var description = 'Starter Page'
	- var keywords = false
	- var ogType = 'website'
	- var ogImage = false

//- Main content
block append content

	include includes/header.pug

	main#page.page

		.wrap
			.row.space
				.col-4
					a.link.link--primary
						| Link primary!
				.col-4
					a.link.link--primary
						.link__group
							:svg(file='checkmark')
							span
								| Link primary!

		.hero.hero--primary
			.wrap
				.hero__wrapper
					header.hero__header
						h1.hero__title
							| Hero title
					main.hero__body
						| Hero content
					footer.hero__footer
						| Hero footer

		.wrap
			
			ul.list.list--vertical.list--dot
				li.list__item
					| List item
				li.list__item
					| List item
				li.list__item
					| List item

			.hideable
				ul.list.list--horizontal.list--dot
					li.list__item
						| List item
					li.list__item
						| List item
					li.list__item
						| List item

	include includes/footer.pug

//- Append addon assets {js/css}
block append assets_header
block append assets_footer
